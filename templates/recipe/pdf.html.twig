{% extends 'base.html.twig' %}

{% block title %}PDF{% endblock %}

{% block stylesheets %}
    <style>
        /* CSS personnalisé pour le PDF */
        body {
            font-family: 'Arial', sans-serif;
            margin: 20px;
            background-color: #f7f7f7;
        }

        .card {
            border-radius: 10px;
            border: none;
            margin-bottom: 20px;
        }

        .card-header {
            background-color: #007bff;
            color: white;
            font-size: 24px;
            padding: 20px;
        }

        .card-body {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-subtitle {
            font-size: 18px;
            font-weight: 600;
        }

        .card-text {
            font-size: 16px;
            line-height: 1.6;
        }

        .list-group-item {
            font-size: 14px;
            border: none;
            background-color: #f9f9f9;
        }

        .list-group-item strong {
            font-weight: bold;
        }

        /* Centrer les éléments de la page */
        .row.justify-content-center {
            margin-top: 30px;
        }

        .col-lg-8 {
            width: 100%;
            max-width: 800px;
        }
    </style>
{% endblock %}

{% block navbar %}{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header text-center">
                    <h2>{{ recipe.title }}</h2>
                </div>
                <div class="card-body">
                    <h5 class="card-subtitle mb-3 text-muted">
                        Créé par : <strong>{{ recipe.createdBy.username }}</strong>
                    </h5>
                    <p class="card-text">{{ recipe.content }}</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Durée de préparation : </strong> {{ recipe.duration }} minutes</li>
                        <li class="list-group-item"><strong>Date de création : </strong> {{ recipe.createdAt|date("d/m/Y") }}</li>
                        <li class="list-group-item"><strong>Dernière mise à jour : </strong> {{ recipe.updatedAt|date("d/m/Y") }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
