            <a class="nav-link px-2 {{ app.current_route == 'admin.index' ? 'link-secondary' : '' }}" href="{{ path('admin.index') }}">Accueil</a>
        </li>
        <li>
            <a class="nav-link px-2 {{ app.current_route starts with 'category.' ? 'link-secondary' : '' }}" href="{{ path('category.index') }}">Cat√©gories</a>
